import cv2
from numpy import *
def RGBtol(img):
    RGBtoLMS=array([[0.3811,0.5783,0.0402],
          [0.1967,0.7244,0.0782],
          [0.0241,0.1288,0.8444]]);
    temp0=array([[1/sqrt(3),0,0],
                  [0,1/sqrt(6),0],
                  [0,0,1/sqrt(2)]])
    temp1=array([[1,1,1],
                 [1,1,-2],
                 [1,-1,0]])
    LMStol=dot(temp0,temp1)
    Z=array(img.reshape((-1,3)))
    LMS=(dot(RGBtoLMS,Z.T))
    LMS=log(LMS)
    l=dot(LMStol,LMS)
    return l
    
